<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account"
    android:layout_margin="@dimen/accountMargin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/accountName"
            android:textSize="@dimen/accountNameTextSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/accountPadding"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/accountBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/accountPadding"
            android:layout_alignParentStart="true"
            app:layout_constraintTop_toBottomOf="@id/accountName" />

        <TextView
            android:id="@+id/accountCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/accountPadding"
            app:layout_constraintStart_toEndOf="@id/accountBalance"
            app:layout_constraintTop_toBottomOf="@id/accountName" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>