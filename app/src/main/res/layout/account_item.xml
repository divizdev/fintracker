<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account"
    android:layout_margin="@dimen/accountMargin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/accountHeight">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/accountName"
            android:textSize="@dimen/accountNameTextSize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/accountPadding"
            android:textColor="@color/colorAccountName"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/accountBalance"
            android:textSize="@dimen/accountNameTextSize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/accountPadding"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@id/accountCurrency"/>

        <TextView
            android:id="@+id/accountCurrency"
            android:textSize="@dimen/accountNameTextSize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/accountPadding"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>